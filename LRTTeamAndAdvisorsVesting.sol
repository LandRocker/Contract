        tokensToVest = tokensToVest.sub(vesting.amount);
        LRTToken.safeTransfer(vesting.beneficiary, vesting.amount);
        emit TokenVestingReleased(
            _vestingId,
            vesting.beneficiary,
            vesting.amount
        );
    }

    function retrieveExcessTokens(uint256 _amount) public onlyOwner {
        require(
            _amount <= LRTToken.balanceOf(address(this)).sub(tokensToVest),
            INSUFFICIENT_BALANCE
        );
        LRTToken.safeTransfer(owner(), _amount);
    }
}
